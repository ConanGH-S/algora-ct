---
interface Props {
  title: string
  language: string
  faviconUrl: string
}

const { title, language, faviconUrl } = Astro.props
---

<html lang={language}>
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={faviconUrl}
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
