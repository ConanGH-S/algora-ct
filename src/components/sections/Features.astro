import Typography from '@/components/atoms/Typography.astro'
---

<section class="flex h-full flex-col justify-center py-8 md:min-h-screen">
  <Typography
    color="primary"
    as="h2"
    variant="h1"
    class="mx-auto mb-36 w-[20ch] text-center"
    >Optimiza tus conversaciones</Typography
  >
  <div
    class="flex min-h-80 flex-col items-center justify-center gap-32 bg-secondary p-9 text-center text-base md:flex-row"
  >
    <div class="flex flex-col items-center gap-8">
      <img
        src="/addUser.svg"
        alt="Icono de aÃ±adir usuarios"
        width="110"
        height="110"
        loading="lazy"
      />
      <p class="text-2xl font-semibold">Busca a tus amigos</p>
    </div>
    <div class="flex flex-col items-center justify-center gap-8">
      <img
        src="/AI.svg"
        alt="Icono de Inteligencia artificial"
        width="110"
        height="110"
        loading="lazy"
      />
      <p class="text-2xl font-semibold">Sugerencias de respuesta usando AI</p>
    </div>
    <div class="flex flex-col items-center justify-center gap-8">
      <img
        src="/shareWord.svg"
        alt="Icono de compartir con el mundo"
