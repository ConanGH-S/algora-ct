---
import type { HTMLTag, Polymorphic } from 'astro/types'

type HTMLActionTag = 'button' | 'a'

type Props<Tag extends HTMLActionTag & HTMLTag> = Polymorphic<{
  as: Tag
  href?: string
}>

const { as: Tag, class: className, ...props } = Astro.props

const ActionDefaultClasses =
  'rounded-lg shadow w-full text-white bg-primary py-2'

const ActionClasses = [Tag === 'button' && ActionDefaultClasses, className]
---

<Tag
  class:list={ActionClasses}
  {...props}
  ><slot /></Tag
>
